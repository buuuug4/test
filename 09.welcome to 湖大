#include<stdio.h>
#include<string.h>
#include<stdlib.h>
#include<windows.h>
int main()
{
	char arr1[] = "****************************";
	char arr2[] = "welcome to hubei university!";
	int a = sizeof(arr1)-1;
	int i = 0;
	
	for (i = 0; i <= (a / 2); i++)
	{
		
		
			printf("%s\n ", arr1);
		
		arr1[i] = arr2[i];
		arr1[a - i-1] = arr2[a - i-1];
		Sleep(500);
		system("cls");

		
	}
	return 0;
}
